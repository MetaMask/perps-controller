{
  "name": "@metamask/perps-controller",
  "version": "0.0.0",
  "description": "Controller for perpetual trading functionality in MetaMask",
  "keywords": [
    "MetaMask",
    "Ethereum"
  ],
  "homepage": "https://github.com/MetaMask/perps-controller#readme",
  "bugs": {
    "url": "https://github.com/MetaMask/perps-controller/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/perps-controller.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ts-bridge --project tsconfig.build.json --clean",
    "build:docs": "typedoc",
    "lint": "yarn lint:eslint && yarn lint:constraints && yarn lint:misc --check && yarn lint:dependencies --check && yarn lint:changelog",
    "lint:changelog": "auto-changelog validate --prettier",
    "lint:constraints": "yarn constraints",
    "lint:dependencies": "depcheck && yarn dedupe --check",
    "lint:dependencies:fix": "depcheck && yarn dedupe",
    "lint:eslint": "eslint .",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:constraints --fix && yarn lint:misc --write && yarn lint:dependencies:fix && yarn lint:changelog",
    "lint:misc": "prettier '**/*.json' '**/*.md' '**/*.yml' '!.yarnrc.yml' --ignore-path .gitignore --no-error-on-unmatched-pattern",
    "prepack": "./scripts/prepack.sh",
    "sync": "./scripts/sync-from-mobile.sh",
    "sync:changelog": "./scripts/extract-mobile-changelog.sh",
    "test": "attw --pack"
  },
  "dependencies": {
    "@metamask/abi-utils": "^3.0.0",
    "@metamask/base-controller": "^9.0.0",
    "@metamask/controller-utils": "^11.18.0",
    "@metamask/messenger": "^0.3.0",
    "@metamask/utils": "^11.9.0",
    "@myx-trade/sdk": "^0.1.265",
    "@nktkas/hyperliquid": "^0.30.2",
    "bignumber.js": "^9.1.2",
    "reselect": "^5.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.3",
    "@lavamoat/allow-scripts": "^3.0.4",
    "@lavamoat/preinstall-always-fail": "^2.0.0",
    "@metamask/account-tree-controller": "^4.0.0",
    "@metamask/auto-changelog": "^5.3.0",
    "@metamask/bridge-controller": "^66.0.0",
    "@metamask/eslint-config": "^15.0.0",
    "@metamask/eslint-config-nodejs": "^15.0.0",
    "@metamask/eslint-config-typescript": "^15.0.0",
    "@metamask/eslint-config-vitest": "^15.0.0",
    "@metamask/keyring-api": "^21.0.0",
    "@metamask/keyring-controller": "^25.0.0",
    "@metamask/keyring-internal-api": "^10.0.0",
    "@metamask/network-controller": "^29.0.0",
    "@metamask/profile-sync-controller": "^27.0.0",
    "@metamask/remote-feature-flag-controller": "^4.0.0",
    "@metamask/transaction-controller": "^62.12.0",
    "@ts-bridge/cli": "^0.6.3",
    "@types/node": "^18.18",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/utils": "^8.6.0",
    "@vitest/coverage-istanbul": "^3.0.7",
    "@vitest/eslint-plugin": "^1.1.4",
    "@yarnpkg/types": "^4.0.0-rc.52",
    "depcheck": "^1.4.3",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.3.0",
    "eslint-plugin-jsdoc": "^50.2.4",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.8",
    "ts-node": "^10.7.0",
    "typedoc": "^0.26.11",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^6.4.1",
    "vitest": "^3.0.7"
  },
  "peerDependencies": {
    "@metamask/account-tree-controller": "^4.0.0",
    "@metamask/bridge-controller": "^66.0.0",
    "@metamask/keyring-api": "^21.0.0",
    "@metamask/keyring-controller": "^25.0.0",
    "@metamask/keyring-internal-api": "^10.0.0",
    "@metamask/network-controller": "^29.0.0",
    "@metamask/profile-sync-controller": "^27.0.0",
    "@metamask/remote-feature-flag-controller": "^4.0.0",
    "@metamask/transaction-controller": "^62.12.0"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@metamask/keyring-controller>ethereumjs-wallet>ethereum-cryptography>keccak": false,
      "@metamask/keyring-controller>ethereumjs-wallet>ethereum-cryptography>secp256k1": false,
      "eslint-plugin-import-x>unrs-resolver": false,
      "vite>esbuild": false,
      "vitest>vite-node>vite>esbuild": false,
      "vitest>vite>esbuild": false
    }
  }
}
